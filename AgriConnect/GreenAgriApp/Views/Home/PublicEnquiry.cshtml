@{
    ViewData["Title"] = "Public Enquiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/agriconnect-enquiry.css" />
</head>
<body>

<section class="enquiry-hero">
    <h1>Enquire to Join AgriConnect</h1>
    <p>Fill in the form below to get started with us.</p>
</section>

<section class="enquiry-form-wrapper">
    <div class="enquiry-image-container">
        <img src="/images/imageside.png" alt="Farmer Enquiry" class="enquiry-side-image" />
    </div>
    <div class="enquiry-form-container">
        <form asp-action="PublicEnquiry" method="post">
            <div class="form-group">
                <input type="text" name="name" placeholder="Your Name" required />
                <input type="text" name="contactNumber" placeholder="Contact Number" required />
            </div>

            <div class="form-group">
                <input type="email" name="email" placeholder="Email Address" required />
                <select name="roleInterest" required>
                    <option value="">-- Select Interest --</option>
                    <option value="Farmer">Become a Farmer</option>
                    <option value="GreenTech">Become a Green Energy Supplier</option>
                </select>
            </div>

            <textarea name="message" placeholder="Message (Optional)"></textarea>

            <div class="checkbox-group">
                <input type="checkbox" name="Consent" required />
                <label>I agree that AgriConnect may contact me using the provided details.</label>
            </div>

            <div style="text-align: center;">
                <button type="submit">Send Enquiry</button>
            </div>

            @if (ViewBag.Message != null)
            {
                <p>@ViewBag.Message</p>
            }
        </form>
    </div>
</section>

</body>
</html>
