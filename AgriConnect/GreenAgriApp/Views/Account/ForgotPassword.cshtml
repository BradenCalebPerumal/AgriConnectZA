@model string
@{
    ViewData["Title"] = "Forgot Password";
}

<link rel="stylesheet" href="~/css/agriconnect-form.css" />

<section class="form-hero-section">
    <h1>Forgot Password</h1>
    <p>Enter your email to receive a password reset link.</p>
</section>

<div class="form-container">
    <form asp-action="ForgotPassword" method="post" class="agriconnect-form">
        <div class="form-group">
            <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
        </div>

        <button type="submit" class="submit-button">
            <i class="fas fa-envelope"></i> Send Reset Link
        </button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="success-message">@ViewBag.Message</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="error-message">@ViewBag.Error</div>
    }
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            @if (TempData["Success"] != null)
            {
                <text>
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'success',
                        title: @Html.Raw(Json.Serialize(TempData["Success"])),
                        showConfirmButton: false,
                        timer: 5500,
                        timerProgressBar: true,
                        background: '#004d29',
                        color: 'white',
                        iconColor: '#21a95d'
                    });
                </text>
            }
            else if (TempData["Error"] != null)
            {
                <text>
                    Swal.fire({
                        toast: true,
                        position: 'top-end',
                        icon: 'error',
                        title: @Html.Raw(Json.Serialize(TempData["Error"])),
                        showConfirmButton: false,
                        timer: 5500,
                        timerProgressBar: true,
                        background: '#721c24',
                        color: 'white',
                        iconColor: '#f8d7da'
                    });
                </text>
            }
        });
    </script>
}
