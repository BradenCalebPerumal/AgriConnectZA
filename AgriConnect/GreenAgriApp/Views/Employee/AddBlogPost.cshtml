@{
    ViewData["Title"] = "Add Blog Post";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/agriconnect-form.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<section class="form-hero-section">
    <h1>Share a New Blog Post</h1>
    <p>Express your insights, updates, and agricultural stories with the community.</p>
</section>

<div class="form-container">
    <form asp-action="AddBlogPost" method="post" enctype="multipart/form-data" class="agriconnect-form">
        <div class="form-group">
            <label for="message">Blog Message</label>
            <textarea name="message" class="form-control" placeholder="Write your blog content here..." required rows="6"></textarea>
        </div>

        <div class="form-group">
            <label for="imageFile">Optional Image</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <button type="submit" class="submit-button">
            <i class="fas fa-blog"></i> Post to Blog
        </button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">
            <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>
