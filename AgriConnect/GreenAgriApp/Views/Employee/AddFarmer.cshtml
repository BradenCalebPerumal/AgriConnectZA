@model GreenAgriApp.Models.ViewModels.RegisterUserViewModel

@{
    ViewData["Title"] = "Add Farmer";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/agriconnect-form.css" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>

<section class="form-hero-section">
    <h1>Register a New Farmer</h1>
    <p>Fill in the form below to register a new farmer to the system.</p>
</section>

<div class="form-container">
    <form asp-action="AddFarmer" method="post" class="agriconnect-form">
        <div class="form-group">
            <input asp-for="FullName" class="form-control" placeholder="Full Name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="submit-button">
            <i class="fas fa-plus-circle"></i> Register Farmer
        </button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">
            <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>
